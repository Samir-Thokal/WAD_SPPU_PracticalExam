<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
    <link rel="stylesheet" href="../static/css/styles.css">
<body>
    <div class="container">
        <form method="get" action="/">
            <button type="submit" class="btn">Addnew</button>
        </form>
    </div>
    <br>
    <% if(student!=null){ %>
        <table border="1px">

            <tr>
                <th>Name</th>
                <th>Rollno</th>
                <th>Wad</th>
                <th>CC</th>
                <th>DSBDA</th>
                <th>CNS</th>
                <th>AI</th>
            </tr>
            <% student.forEach(function(item){ %>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.rollno %></td>
                    <td><%= item.wad_marks %></td>
                    <td><%= item.cc_marks %></td>
                    <td><%= item.dsbda_amarks %></td>
                    <td><%= item.cc_marks %></td>
                    <td><%= item.cns_marks %></td>
                    <td><%= item.ai_marks %></td>
                    <td>
                        <form method="post" action="/deletestudent/<%= item._id%>">
                            <button type="submit" class="btn">Delete</button>
                        </form>
                    </td>
                </tr>
            <% })%>
                
        </table>
    <% }%>
                
</body>
</html>